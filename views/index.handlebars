<div class="container">
        <div class="row mt-5">
            <div class="jumbotron">
                <div class="row">
                    <div class="col md-4">
                        <h2>Burger Stash</h2>   
                        <ul>
                            {{#each burgers}}
                              {{#unless devoured}}
                                <li>
                                    <p>{{this.burger_name}}</p>
                                    <button class="eat" data-id="{{this.id}}" data-eaten="{{this.devoured}}">Devoure</button>
                                </li>
                              {{/unless}}
                            {{/each}}
                          </ul>

                    </div>
                    <div class="col md-4">
                        <h2>Add more burgers</h2>   

                    <form class="new-burger">
                    <div class="form-group">
                        <label for="burger">Burger:</label>
                        <input type="text" id="burger" name="burger">
                    </div>
                    <button type="submit">Add Burger</button>
                    </form>

                    </div>
                    <div class="col md-4">
                        <h2>Devoured burgers</h2>   
                        <ul>
                            {{#each burgers}}
                              {{#if devoured}}
                                <li>
                                    <p>{{this.burger_name}}</p>
                                </li>
                              {{/if}}
                            {{/each}}
                          </ul>
                        
                    </div>
                </div>
              </div>
        </div>
    </div>